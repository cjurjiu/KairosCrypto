<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/text_item_simple_list"
        style="@style/CryptoSmart.Style.Button.Flat.WithRippleMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/min_margin_from_screen_edge"
        android:textAppearance="@style/CryptoSmart.Style.Text.Muli.Medium_Large"
        tools:text="USD" />

    <ImageView
        android:id="@+id/image_selected_item_simple_list"
        style="@style/CryptoSmart.Style.Image.VectorDrawable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:padding="@dimen/min_margin_from_screen_edge"
        android:src="@drawable/ic_vector_check_black_24dp"
        android:visibility="gone" />

    <include layout="@layout/mergeable_layout_separator" />

</FrameLayout>