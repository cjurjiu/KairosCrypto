<resources>

    <!--ATTRIBUTE DEFINITIONS-->
    <attr name="colorBackground" format="color|reference" />

    <!--STYLING ELEMENTS HIERARCHY SETUP-->
    <style name="CryptoSmart" />

    <style name="CryptoSmart.Theme" parent="CryptoSmart" />

    <style name="CryptoSmart.Style" parent="CryptoSmart" />

    <style name="CryptoSmart.Style.Text" parent="CryptoSmart" />

    <!--THEMES-->

    <!--Application light theme (default).-->
    <style name="CryptoSmart.Theme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray_primary</item>
        <item name="colorPrimaryDark">@color/gray_primary_dark</item>
        <item name="colorAccent">@color/gray_secondary</item>
        <item name="colorBackground">@color/white</item>
        <!--don't apply android:background in the theme to prevent it from being applied by default
        to transparent views.-->
    </style>

    <!-- Application dark theme. -->
    <style name="CryptoSmart.Theme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white_50_opacity</item>
        <item name="colorAccent">@color/gray_secondary_dark</item>
        <item name="colorBackground">@color/gray900</item>
        <!--don't apply android:background in the theme to prevent it from being applied by default
        to transparent views.-->
    </style>

    <!--High contrast theme. Useful for debugging.-->
    <style name="HighContrastTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary_old</item>
        <item name="colorPrimaryDark">@color/color_secondary_old</item>
        <item name="colorAccent">@color/color_accent_old</item>
        <!--don't apply android:background in the theme to prevent it from being applied by default
            to transparent views.-->
    </style>

    <!--ARBITRARY APPEARANCE-->
    <style name="CryptoSmart.Style.Background">
        <item name="android:background">?attr/colorBackground</item>
    </style>

    <!--PROGRESS BAR-->
    <style name="CryptoSmart.Style.Progress.Horizontal.Indeterminate.BookmarksCard" parent="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding">
        <item name="android:indeterminate">true</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_useIntrinsicPadding">false
        </item>
    </style>

    <!--IMAGES-->
    <style name="CryptoSmart.Style.Image">
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:minHeight">@dimen/min_tap_area_side</item>
        <item name="android:minWidth">@dimen/min_tap_area_side</item>
    </style>

    <style name="CryptoSmart.Style.Image.VectorDrawable" parent="CryptoSmart.Style.Image">
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">?attr/colorPrimary</item>
    </style>

    <!--BUTTONS-->
    <style name="CryptoSmart.Style.Button" parent="CryptoSmart.Style.Image">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CryptoSmart.Style.Button.VectorDrawable" parent="CryptoSmart.Style.Button">
        <item name="android:background">@drawable/themed_background_with_ripple</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:buttonTint">?attr/colorPrimary</item>
    </style>

    <style name="CryptoSmart.Style.Button.Flat" parent="CryptoSmart.Style.Button">
        <item name="android:elevation">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/themed_background_with_ripple</item>
        <item name="android:textAppearance">@style/CryptoSmart.Style.Text.Muli.Medium_Large</item>
    </style>

    <style name="CryptoSmart.Style.Button.Flat.Small" parent="CryptoSmart.Style.Button.Flat">
        <item name="android:textAppearance">@style/CryptoSmart.Style.Text.Muli.Small</item>
        <item name="android:minHeight">@dimen/min_tap_area_side_small</item>
        <item name="android:minWidth">@dimen/min_tap_area_side_small</item>
    </style>

    <style name="CryptoSmart.Style.Button.Flat.Small.Selected" parent="CryptoSmart.Style.Button.Flat">
        <item name="android:textAppearance">@style/CryptoSmart.Style.Text.Muli.Medium.Light</item>
        <item name="android:minHeight">@dimen/min_tap_area_side_small</item>
        <item name="android:minWidth">@dimen/min_tap_area_side_small</item>
    </style>

    <style name="CryptoSmart.Style.Button.Flat.WithRippleMask" parent="CryptoSmart.Style.Button.Flat">
        <item name="android:background">@drawable/themed_background_with_masked_ripple</item>
    </style>

    <!--TOOLBAR-->
    <style name="CryptoSmart.Style.Toolbar">
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:elevation">4dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="CryptoSmart.Style.Toolbar.Button" parent="CryptoSmart.Style.Button.VectorDrawable">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--BOTTOM BAR-->
    <style name="CryptoSmart.Style.BottomBar">
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!--VIEW PAGER TABS-->
    <style name="CryptoSmart.Style.TabLayout">
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:elevation">4dp</item>
        <item name="tabTextAppearance">@style/CryptoSmart.Style.Text.Muli.Medium</item>
        <item name="tabSelectedTextColor">?attr/colorPrimaryDark</item>
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0.5dp</item>
    </style>

    <!--CARDS-->
    <style name="CryptoSmart.Style.BookmarksCard">
        <item name="android:background">@drawable/themed_card_background_clickable</item>
        <item name="android:elevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!--TEXT STYLES-->

    <!--MULI FONT-->

    <!--small fonts-->
    <style name="CryptoSmart.Style.Text.Muli.Small" parent="CryptoSmart">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/font_muli_extra_light</item>
    </style>

    <style name="CryptoSmart.Style.Text.Muli.Small.Light" parent="CryptoSmart.Style.Text.Muli.Small">
        <item name="fontFamily">@font/font_muli_light</item>
    </style>

    <!--medium fonts-->
    <style name="CryptoSmart.Style.Text.Muli.Medium" parent="CryptoSmart">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/font_muli_extra_light</item>
    </style>

    <style name="CryptoSmart.Style.Text.Muli.Medium.Light" parent="CryptoSmart.Style.Text.Muli.Medium">
        <item name="fontFamily">@font/font_muli_light</item>
    </style>

    <style name="CryptoSmart.Style.Text.Muli.Medium.Regular" parent="CryptoSmart.Style.Text.Muli.Medium">
        <item name="fontFamily">@font/font_muli_regular</item>
    </style>

    <!--medium large fonts-->
    <style name="CryptoSmart.Style.Text.Muli.Medium_Large" parent="CryptoSmart">
        <item name="android:textSize">@dimen/text_size_medium_large</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/font_muli_light</item>
    </style>

    <style name="CryptoSmart.Style.Text.Muli.Medium_Large.Regular" parent="CryptoSmart.Style.Text.Muli.Medium_Large">
        <item name="fontFamily">@font/font_muli_regular</item>
    </style>

    <!--large fonts-->
    <style name="CryptoSmart.Style.Text.Muli.Large" parent="CryptoSmart">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">@font/font_muli_regular</item>
    </style>

    <!--DIALOGS-->
    <style name="CryptoSmart.Style.Dialog">
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:maxHeight">300dp</item>
    </style>

    <style name="CryptoSmart.Style.Dialog.TitleText">
        <item name="android:layout_margin">16dp</item>
        <item name="android:textAppearance">@style/CryptoSmart.Style.Text.Muli.Large</item>
    </style>

    <style name="CryptoSmart.Style.Dialog.RecyclerView">
        <item name="android:background">?attr/colorBackground</item>
        <item name="android:maxHeight">300dp</item>
        <item name="maxHeight">300dp</item>
    </style>
</resources>
